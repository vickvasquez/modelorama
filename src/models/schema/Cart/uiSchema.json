{
  "title": "Shopping cart",
  "id": {
    "ui:widget": "hidden"
  },
  "items": {
    "ui:title": "Gift list",
    "ui:template": [
      ["small", " ... ${@mul:qty,Product.price}"],
      ["small", "{qty} Ã— ${Product.price!0.00}"],
      ["span", "{Product.name!N/A}"]
    ]
  },
  "ui:fields": [
    {
      "prop": "id",
      "title": "Cart ID"
    },
    {
      "title": "Products",
      "template": [
        ["small", "${@mul:items.*.qty,items.*.Product.price}"],
        ["small", "items: {@sum:items.*.qty}"],
        ["span", "{@uniq:items.*.Product.name}"]
      ]
    }
  ]
}
