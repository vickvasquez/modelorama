{
  "title": "Shopping cart",
  "id": {
    "ui:widget": "hidden"
  },
  "items": {
    "ui:title": "Gift list",
    "ui:template": [
      ["small", "${Product.price}"],
      ["span", "{Product.name}"],
      ["span", "({qty})"]
    ]
  },
  "ui:fields": [
    {
      "prop": "id",
      "title": "Cart ID"
    },
    {
      "title": "Products",
      "template": [
        ["small", "total: {@sum:items.*.CartItem.qty}"],
        ["span", "{@val:items.*.name}"]
      ]
    }
  ]
}
